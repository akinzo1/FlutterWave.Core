<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>disable</Nullable>
		<Title>FlutterWave.Core</Title>
		<Company>Panda-tut Enterprises Limited</Company>
		<Authors>Ahmad Salim</Authors>
		<Description>A Standardized .NET library for FlutterWave integration</Description>
		<Copyright>Panda-tut Enterprises Limited 2023 (c)</Copyright>
		<PackageLicenseFile>license.txt</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<RepositoryType>git</RepositoryType>
		<PackageTags>Flutterwave, .NET, The Standard, FlutterWave.Core</PackageTags>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageProjectUrl>https://github.com/SlimAhmad/FlutterWave.Core</PackageProjectUrl>
		<PackageIcon>flutterwave.jpg</PackageIcon>
		<RepositoryUrl>https://github.com/SlimAhmad/FlutterWave.Core</RepositoryUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<FileVersion>1.0.2</FileVersion>
		<AssemblyVersion>1.0.2</AssemblyVersion>
		<Version>1.0.2</Version>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.1" />
		<PackageReference Include="RESTFulSense" Version="3.1.0" />
		<PackageReference Include="System.Net.Http" Version="4.3.4" />
		<PackageReference Include="System.Text.Json" Version="8.0.5" />
		<PackageReference Include="System.Text.RegularExpressions" Version="4.3.1" />
		<InternalsVisibleTo Include="FlutterWave.Core.Tests.Unit" />
		<InternalsVisibleTo Include="FlutterWave.Core.Tests.Acceptance" />
	</ItemGroup>

	<ItemGroup>
		<Folder Include="Models\Services\Foundations\ExternalFlutterWave\ExternalRemita\" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="FlutterWave.Core.Tests.Unit" />
		<InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
		<InternalsVisibleTo Include="FlutterWave.Core.Tests.Acceptance" />
	</ItemGroup>

	<ItemGroup>
	  <None Include="..\README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
		<None Update="flutterwave.jpg">
		  <Pack>True</Pack>
		  <PackagePath>\</PackagePath>
		</None>
		<None Update="license.txt">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>


</Project>
